{{#message-box-click-button btn1Click=true}}
  <nav class="tab-bar">
    <section class="left-small">
      <div class="back" {{action 'transitionTo' backLinkPath}}>{{t "back"}}</div>
    </section>

    <section class="middle tab-bar-section">
      <h1 class="title">{{t "authenticate.input_code"}}</h1>
    </section>
  </nav>

  <section class="main-section">
    <div class="small-12 columns">
      {{#validatable-form class="form-horizontal" action="authenticateUser" on="submit"}}
        <div class="row">
          <div class="small-12 columns">
            <label class="form-label">{{t "_verification_pin.input_code"}}</label>
          </div>
        </div>

        <div class="row">
          <div class="small-8 columns">
            {{numeric-input value=pin name="pin" id="pin" maxlength="4" placeholder="XXXX" required='true' pattern=".{4,}" autoFocus=true}}
          </div>
          <div class="small-4 columns">
            <button id="submit_pin" type="submit" class="button expand">{{t "ok"}}</button>
          </div>
        </div>
      {{/validatable-form}}

      <div class="row">
        <div class="small-4 columns" style="float: right;">
          <a href="#" disabled={{pinAlreadySent}} {{action "resendPin"}} id="resend-pin" class="button secondary expand" style={{if pinAlreadySent "pointer-events:none;"}}>{{t "_resend.resend"}}
          {{#if pinAlreadySent}}
            <label class="form-label">{{t "_resend.try_again" timer=timer}}</label>
          {{/if}}
          </a>
        </div>
      </div>
    </div>
  </section>
{{/message-box-click-button}}
