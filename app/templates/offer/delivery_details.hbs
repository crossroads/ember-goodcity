<div class = 'row delivery-details'>
  <div class="small-12 columns">

    <div class="row gogovan_status">
      <div class="small-12 columns">
        {{#if delivery.gogovanOrder.isPending}}
          <h3><i class="fa fa-exclamation-triangle"></i> {{t 'delivery_details.waiting'}}</h3>

          {{t 'delivery_details.display_driver_details'}}
          <hr>
        {{else if delivery.gogovanOrder.isActive}}
          <h3>{{t 'delivery_details.booked'}}</h3>

          <div class="row">
            <div class="small-6 columns">
              {{t 'delivery_details.driver'}}
            </div>
            <div class="small-6 columns right strong">
              {{delivery.gogovanOrder.driverName}}
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="small-6 columns">
              {{t 'delivery_details.driver_contact'}}
            </div>
            <div class="small-6 columns right strong">
              {{delivery.gogovanOrder.driverMobile}}
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="small-6 columns">
              {{t 'delivery_details.vehicle_reg'}}
            </div>
            <div class="small-6 columns right strong">
              {{delivery.gogovanOrder.driverLicense}}
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="small-6 columns">
              {{t 'delivery_details.fee'}}
            </div>
            <div class="small-6 columns right strong">
              {{delivery.gogovanOrder.price}}
            </div>
          </div>
          <hr>
        {{/if}}
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        {{t 'delivery_details.accepted_items'}}
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns items_list">
         {{#each item in model.approvedItems}}
           <img {{bind-attr src="item.displayImageUrl"}} class="thumb" />
         {{/each}}
      </div>
    </div>

    <hr>
    <div class="row">
      <div class="small-6 columns">
        {{t 'delivery_details.time'}}
      </div>
      <div class="small-6 columns right strong">
        {{delivery.schedule.slotName}}
      </div>
    </div>

    <hr>
    <div class="row">
      <div class="small-6 columns">
        {{t 'delivery_details.name'}}
      </div>
      <div class="small-6 columns right strong">
        {{userName}}
      </div>
    </div>

    <hr>
    <div class="row">
      <div class="small-6 columns">
        {{t 'delivery_details.phone'}}
      </div>
      <div class="small-6 columns right strong">
        {{userMobile}}
      </div>
    </div>

    {{#if delivery.noDropOff}}
      <hr>
      <div class="row">
        <div class="small-6 columns">
          {{t 'delivery_details.address'}}
        </div>
        <div class="small-6 columns right strong">
          {{{delivery.contact.address.fullAddress}}}
        </div>
      </div>
    {{/if}}

    <hr>
    <div class="row">
      <div class="small-6 columns">
        {{t 'delivery_details.district'}}
      </div>
      <div class="small-6 columns right strong">
        {{district}}
      </div>
    </div>

    <hr>
    <div class="row">
      <div class="small-6 columns">
        {{t 'delivery_details.charity_sale'}}
      </div>
      <div class="small-6 columns right strong">
        {{model.isCharitableSale}}
      </div>
    </div>

    <hr>
    <div class="row transport-buttons">
      <div class="small-5 columns">
        {{#link-to '' classNames='button expand' disabled=true}}{{t 'delivery_details.modify'}}{{/link-to}}
      </div>
      <div class="small-7 columns">
        <a href="#" {{action 'cancelDelivery'}}class="button secondary expand">{{t 'delivery_details.cancel_booking'}}</a>
      </div>
    </div>
  </div>
</div>
