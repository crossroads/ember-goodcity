{{#init-foundation}}
  {{outlet "internet_call_status"}}
  {{outlet "notifications"}}
  {{outlet "notification_link"}}
  {{smart-banner
    appIdAndroid = app_id
    appIdIOS = ios_app_id
    openAfterClose = 7
    openAfterVisit = false
    iconUrl = appIcon.imageUrl
    title = appIcon.appTitle
    description = 'Crossroads'
  }}
  {{outlet}}
{{/init-foundation}}

{{#with subscriptions.status as |status|}}
  <div id="status" class="{{if status.online 'online'}} {{if status.hidden 'hidden'}}">
    <i class="fa fa-dot-circle-o"></i>
    <span>{{status.text}}</span>
  </div>
{{/with}}
