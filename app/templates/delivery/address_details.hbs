<div class="small-6 columns">
  {{view "select"
    content=territories
    optionValuePath="content.id"
    optionLabelPath="content.name"
    value=selectedTerritory
    prompt=territoriesPrompt
    classNames='selectAddress'
    required='true' }}
</div>
<div class="small-6 columns">
  {{view "select"
    content=districtsByTerritory
    optionValuePath="content.id"
    optionLabelPath="content.name"
    value=selectedDistrict
    prompt=destrictPrompt
    classNames='selectAddress district'
    required='true' }}
</div>
