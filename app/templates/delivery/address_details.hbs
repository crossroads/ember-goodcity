<div class="small-6 columns">
  {{view "select"
    content=territories
    optionValuePath="content.id"
    optionLabelPath="content.name"
    selection=selectedTerritory
    value=territoryId
    prompt="All"
    classNames='selectAddress'
    required='true' }}
</div>
<div class="small-6 columns">
  {{view "select"
    content=districtsByTerritory
    optionValuePath="content.id"
    optionLabelPath="content.name"
    selection=selectedDistrict
    value=districtId
    prompt="Select District"
    classNames='selectAddress district'
    required='true' }}
</div>
