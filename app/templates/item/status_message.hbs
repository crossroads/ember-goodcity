<div class="offer-status {{item.statusBarClass}}">
  <div class='status-message'>
    {{#if item.offer.isCancelled}}
      {{t "item.cancelled_status" firstName=item.offer.createdBy.firstName lastName=item.offer.createdBy.lastName}} {{calender-date item.offer.cancelledAt}}
    {{else if item.isSubmitted}}
      {{t "item.submitted_status"}}
    {{else if item.isUnderReview}}
      {{t "item.in_review_status"}}
    {{else if item.isAccepted}}
      {{t "item.accepted_status"}}
    {{else if item.isRejected}}
      {{t "item.rejected_status"}}
    {{/if}}
  </div>
</div>
